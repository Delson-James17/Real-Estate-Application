@{
}
<section class="vh-100 bg-image">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Create an account</h2>

                            <form asp-controller="Account" asp-action="Register" method="post">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-outline mb-4">
                                    <input asp-for="Name" id="form3Example1cg" class="form-control form-control-lg" />
                                    <label class="form-label" for="form3Example1cg">Your Name</label>
                                    <span asp-validation-for="Name"></span>
                                </div>
                                <div class="mb-4 pb-2">
                                    <div class="form-outline form-white">
                                        <input asp-for="Address" id="form3Examplea6" class="form-control form-control-lg" />
                                        <label class="form-label" for="form3Examplea6">Address</label>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-5 mb-4 pb-2">

                                        <div class="form-outline form-white">
                                            <input asp-for="Age" id="form3Examplea7" class="form-control form-control-lg" />
                                            <label class="form-label" for="form3Examplea7"> Age</label>
                                            <span asp-validation-for="Age"></span>
                                        </div>

                                    </div>
                                    <div class="col-md-7 mb-4 pb-2">

                                        <div class="form-outline form-white">
                                            <input asp-for="PhoneNumber" id="form3Examplea8" class="form-control form-control-lg" />
                                            <label class="form-label" for="form3Examplea8">Phone Number</label>
                                        </div>

                                    </div>
                                </div>
                                <div class="mb-4 pb-2">
                                    <div class="form-outline form-white">
                                        <input asp-for="DOB" id="form3Examplea6" class="form-control form-control-lg" />
                                        <label class="form-label" for="form3Examplea6">Date of Birth</label>
                                        <span asp-validation-for="DOB"></span>
                                    </div>
                                </div>
                                <div class="mb-4 pb-2">
                                    <div class="form-outline form-white">
                                        <input asp-for="UrlImages" id="form3Examplea6" class="form-control form-control-lg" />
                                        <label class="form-label" for="form3Examplea6">Url Images</label>
                                        <span asp-validation-for="UrlImages"></span>
                                    </div>
                                </div>
                                <div class="mb-4 pb-2">
                                    <div class="form-outline form-white">
                                        <input asp-for="UserName" id="form3Examplea6" class="form-control form-control-lg" />
                                        <label class="form-label" for="form3Examplea6">UserName</label>
                                        <span asp-validation-for="UserName"></span>
                                    </div>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="Email" id="form3Example3cg" class="form-control form-control-lg" />
                                    <label class="form-label" for="form3Example3cg">Your Email</label>
                                    <span asp-validation-for="Email"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="Password" id="form3Example4cg" class="form-control form-control-lg" />
                                    <label class="form-label" for="form3Example4cg">Password</label>
                                    <span asp-validation-for="Password"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <input asp-for="ConfirmPassword" id="form3Example4cdg" class="form-control form-control-lg" />
                                    <label class="form-label" for="form3Example4cdg">Repeat your password</label>
                                    <span asp-validation-for="ConfirmPassword"></span>
                               @* </div>
                                <div class="form-outline mb-4">
                                    <select asp-for="Role" id="form3Example3cg" class="form-select form-select-lg" >
                                        <option disabled selected> Select Role</option>
                                    </select>
                                    <label class="form-label" for="form3Example3cg">Roles </label>
                                    <span asp-validation-for="Role"></span>
                                </div>*@

                                <div class="d-flex justify-content-center">
                                    <button type="submit"
                                            class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">
                                        Register
                                    </button>
                                </div>

                                <p class="text-center text-muted mt-5 mb-0">
                                    Have already an account? <a asp-action="Login"
                                                                class="fw-bold text-body"><u>Login here</u></a>
                                </p>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>