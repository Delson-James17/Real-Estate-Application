@using Real_Estate.ViewModels;
@model List<RoleViewModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var useId = ViewBag.userId;
}
<form method="post">

    <div class="card">
        <div class="card-header">
            <h2>Manage User Roles</h2>
        </div>
        <div class="card-body">
            @for(int i= 0; i <Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].Id"/>
                    <input type="hidden" asp-for="@Model[i].Name" />
                    <input asp-formaction="@Model[i].IsSelected" class="form-check-input"/>
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].Name
                    </label>
                </div>

            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value=" Update" class="btn btn-primary"
            style="width:auto"/>
            <a asp-action="Update" asp-route-id="@useId"></a>

        </div>
    </div>

</form>